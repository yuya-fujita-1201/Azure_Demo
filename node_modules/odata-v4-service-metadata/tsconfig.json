{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "lib",
        "module": "commonjs",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "declaration": true,
        "watch": false,
        "sourceMap": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noImplicitThis": true
    },
    "exclude": [
        "lib",
        "node_modules"
    ]
}